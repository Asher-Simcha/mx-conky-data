${font pftempestafivecondensed:size=6}${offset 408}${voffset -42}${color white}Cpu:$cpu%  ${if_existing /sys/class/hwmon/hwmon0/temp1_input}${eval ${hwmon 0 temp 1}}Â°C${endif}       
